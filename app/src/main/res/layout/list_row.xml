<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_bg"
    android:padding="12dp">

    <TextView
        android:id="@+id/fooditem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:text="Food item"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/dateitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fooditem"
        android:layout_centerHorizontal="true"
        android:text="dateitem"
        android:textStyle="italic"

        />

    <ImageView
        android:id="@+id/aple"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/dateitem"
        android:layout_centerHorizontal="true"
        android:src="@drawable/apple" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aple"
        android:layout_centerHorizontal="true"
        android:text="120"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/calories"
        android:layout_toRightOf="@+id/calories"
        android:text="Cal"


        />

    <TextView
        android:id="@+id/hasChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=">"
        android:textSize="36sp" />
</RelativeLayout>